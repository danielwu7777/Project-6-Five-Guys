<%= javascript_pack_tag 'stock_polling' %>

<p id="notice"><%= notice %></p>

<h1>Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Ticker</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="stock_table">
    <%= render :partial => 'stock', :collection => @stocks %>
  </tbody>
</table>

<br>

<h1>News: </h1>
<div class="grid-container">
  <div class="grid-x grid-padding-x" data-equalizer data-equalize-on="medium" >
    <%= render :partial => 'news_article', :collection => @news_articles %>
  </div>
</div>
