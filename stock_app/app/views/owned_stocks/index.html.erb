<p id="notice"><%= notice %></p>

<h1>Owned Stocks</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Ticker</th>
      <th>Shares owned</th>
      <th>Total cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owned_stocks.each do |owned_stock| %>
      <tr>
        <td><%= owned_stock.user_id %></td>
        <td><%= owned_stock.ticker %></td>
        <td><%= owned_stock.shares_owned %></td>
        <td><%= owned_stock.total_cost %></td>
        <td><%= owned_stock.purchased %></td>
        <td><%= link_to 'Show', owned_stock %></td>
        <td><%= link_to 'Edit', edit_owned_stock_path(owned_stock) %></td>
        <td><%= link_to 'Destroy', owned_stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'View Stock', owned_stock.stock %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

