<p id="notice"><%= notice %></p>

<h1>Portfolio</h1>

<% if user_signed_in? %>
  <h3>Current Value: <%= current_user.currentbalance %></h3>
  <h3>Liquid Cash: <%= current_user.liquidcash %></h3>
  <h3>Overall Loss/Gain: <%= (current_user.currentbalance / current_user.initialbalance - 1) * 100%>%</h3>




<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Ticker</th>
      <th>Shares owned</th>
      <th>Total cost</th>
      <th>Current Value</th>
      <th>Gain/Loss</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @owned_stocks.each do |owned_stock| %>
      <tr>
        <td><%= owned_stock.user_id %></td>
        <td><%= owned_stock.ticker %></td>
        <td><%= owned_stock.shares_owned %></td>
        <td><%= owned_stock.total_cost %></td>
        <td><%= owned_stock.current_value %></td>
        <td><%= (owned_stock.current_value / owned_stock.total_cost - 1) * 100 %>%</td>
        <td><%= link_to 'View Stock', owned_stock.stock %></td>

      </tr>
    <% end %>
  <% else %>
  <p>You are not signed in</p>
  <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
  <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
  <% end %>

  </tbody>
</table>

